<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="container-fluid" style="padding-bottom: 75px;">

  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Promo Août 2015 - Janv 2016 : Only the bests !!!</h1>
    </div>
  </div>

<hr>

  <div class="row">
    <div class="col-md-12">
      <h3>
        Carte des Wilders<br>
        <small>Si la carte ne s'affiche pas, rafraichir la page (petit bug à fixer)</small>
      </h3>

    </div>
  </div>

  <div class="row">
    
    <div class="col-md-8">
      <div style='width: 100%;'>
        <div id="map" style='width: 100%; height: 400px;'></div>
      </div>
    </div>
    <div class="col-md-4">
      <h4 class="text-center">Les Wilders par langage</h4>
      <hr>
      <div class="row">
        <div class="col-md-12">
          <h5>Les rubystes : </h5>
          <% @users.langage_ruby.in_groups_of(6, false).each do |group| %>
            <div class="row">
              <% group.each do |user| %>
                <div class="col-md-2">
                  <a href="#" data-toggle="tooltip" title="<%= user.pseudo %>"><%= image_tag user.avatar.url(:thumb) %></a>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h5>Les Javascripts : </h5>
          <% @users.langage_js.in_groups_of(6, false).each do |group| %>
            <div class="row">
              <% group.each do |user| %>
                <div class="col-md-2">
                  <a href="#" data-toggle="tooltip" title="<%= user.pseudo %>"><%= image_tag user.avatar.url(:thumb) %></a>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h5>Les Phpistes : </h5>
          <% @users.langage_php.in_groups_of(6, false).each do |group| %>
            <div class="row">
              <% group.each do |user| %>
                <div class="col-md-2">
                  <a href="#" data-toggle="tooltip" title="<%= user.pseudo %>"><%= image_tag user.avatar.url(:thumb) %></a>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

<hr>

  <div class="row">
    <div class="col-md-12">
      <h3>Liste des Wilders</h3>
    </div>
  </div>


  <% @users.each do |user| %>
  
    <div class="row well">
      <div class="col-md-3">
        <p>
          <% if current_user.avatar.exists? %>
            <%= image_tag user.avatar.url(:medium) %>
          <% end %>
        </p>
        <p>
          <b><i class="fa fa-user"></i><%= user.nom %> <%= user.prenom %></b><br/>
          <i class="fa fa-phone"></i><%= user.telephone %><br/>
          <i class="fa fa-envelope"></i><%= user.email %><br/>
          <i class="fa fa-map-marker"></i><%= user.adresse %>
        </p>
      </div>
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-12">
            <h4>Développeur <%= user.langage %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p>
              <%= user.competence %>
            </p>
            <p>
              <%= user.description %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= link_to "Envoyer un message à #{user.pseudo}", new_message_path(@user), class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>