<div class="container-fluid" style="padding-bottom: 75px;">

  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center"><%= image_tag @user.gravatar_url(:size => 40) %><%= @user.pseudo %> : <%= @user.nom %> <span style="color: #337AB7;"><%= @user.prenom %></span><br>
      <small><%= @user.tag %></small>
      </h1>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-12">
       <h2>Tableau de bord :</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <p>
        <b>Nombre de points challenger : </b><%= @user.points %>
      </p>
    </div>
    <div class="col-md-4">
      <p class="text-center"><b>Nombre de challenges relévés :</b> <%= @user.participations.count %></p>
    </div>
    <div class="col-md-4">
      <p class="pull-right"><b>Nombre de challenges déposés :</b> <%= @user.challenges.count %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <p> <b>Nombre de posts : </b><%= @user.posts.count %></p>
    </div>
    <div class="col-md-4">
      <p class="text-center"><b>Nombre de like/unlike :</b> <%= nb_votes(current_user) %></p>
    </div>
    <div class="col-md-4">
      <p class="pull-right"><b>Nombre d'annonces :</b> <%= nb_offres_user(current_user) %></p>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-12">
       <h2>Carte de visite :</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= logo(@user.langage) %>
    </div>
    <div class="col-md-8">
      <h4>Présentation</h4>
      <%= @user.description %>
      <h4>Compétences Web</h4>
      <%= @user.competence %>
      <div class="row">
        <div class="col-md-12">
          <h4>Me contacter</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6"><%= @user.telephone %></div>
        <div class="col-md-6"><%= @user.email %></div>
      </div>
    </div>
  </div>

  <hr>
  
  <div class="row">
    <div class="col-md-12">
       <h2>Challenger :<%= link_to "Retour aux challenges", challenges_path, class: "btn btn-primary pull-right" %></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Challenges déposés</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render @challenges %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Challenges relevés :</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <ul>
        <% @participations_user.each do |participation| %>
          <li><%= participation.challenge.title %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row" style="padding-bottom: 75px;">
    <div class="col-md-12">
      <%= link_to "Retour aux challenges", challenges_path, class: "btn btn-primary" %>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-12">
       <h2>Mes listes :</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @todo_lists.count > 0 %>
        <!-- Liste des todolists -->
        <div class="row" id="container_todolists">
          <%= render @todo_lists %>
        </div>
      <% else %>
        <div class="well">
          <h2 class="text-center">Vous n'avez pas encore de liste</h2>
        </div>
      <% end %>
    </div>
  </div>

</div>
