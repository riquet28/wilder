<h2 style="margin-top: 60px;">Votre Profil</h2>

<hr>

<h3>Civilité</h3>

<div class="row">
  <div class="col-md-12" style="margin-bottom: 30px">
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { class: 'form-horizontal' })  do |f| %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :prenom, label: "Votre prénom" %>
          <%= f.input :nom, label: "Votre nom" %>
        </div>
        <div class="col-md-6">
          <%= f.input :email, label: "Votre email" %>
          <%= f.input :pseudo, label: "Votre pseudo" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-5">
          <%= f.input :current_password, label: "Saisissez votre mot de passe pour confirmer vos changements", autocomplete: "off" %>
        </div>
        <div class="col-md-5">
         <%= f.input :birthday, label: "Votre date de naissance", as: :date,
            start_year: Date.today.year - 50, end_year: Date.today.year - 12,
            discard_day: false,
            order: [:day, :month, :year] %>  
        </div>
        <div class="col-md-2">
          <%= f.button :submit, "Mettre à jour", class: "btn btn-primary" %>
        </div> 
      </div>

    <% end %>

  </div>
</div>

<hr>

<h2>Suppression de compte</h2>

<hr>

<p>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


