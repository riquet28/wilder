<div class="row">
  <div class="col-md-12">
    <h2 class="text-center">Inscription Rapide</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-inscrip-rapid">

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-7") do |f| %>

      <%= f.text_field :pseudo, label: "Votre pseudo", placeholder: "Choisissez un pseudo" %>
      <%= f.email_field :email, label: "Votre email", placeholder: "Votre email" %>
        
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

      <%= f.password_field :password, label: "Mot de passe", icon: "user", placeholder: "Votre mot de passe" %>
      <%= f.password_field :password_confirmation, label: "Confirmez votre mot de passe", autocomplete: "off", placeholder: "Minimum 8 caractÃ¨res" %>

        <%= f.form_group do %>
          <%= f.check_box :remember_me, label: "Se souvenir de moi" %>
        <% end %>
      <%= f.primary "Inscription et Go !!!", control_col: "col-sm-7 col-offset-sm-4" %>
    <% end %>

  </div>
</div>


<%= render "devise/shared/links" %>
