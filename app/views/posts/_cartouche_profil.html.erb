<div class="row">
  <div class="col-md-12">
    <h3><i class="fa fa-user"></i>Votre Profil</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <p>
      <!-- <img src="http://www.1001avatars.net/_avatars/humour/008.jpg" alt="" class="img-responsive"> -->
      <% if current_user.avatar.exists? %>
        <%= image_tag current_user.avatar.url(:thumb) %>
      <% end %>
    </p>
  </div>
  <div class="col-md-9">
    <p>Votre pseudo :<br>
      <b><%= current_user.pseudo %></b>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>Humeur<br/>"<%= current_user.tag %>"</p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= logo(current_user.langage) %>
  </div>
  <div class="col-md-8">
    <p><b>Langage web :</b><br />
      <%= current_user.langage %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p><b>Compétences Web :</b><br />
      <%= current_user.competence %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to "Mettre à jour votre profil", edit_user_registration_path, class: "btn btn-primary center-block" %>
  </div>
</div>